# Environment variables for Docker deployment
# Copy this file to .env and update the values

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars

# Database URLs (using SQLite by default)
AUTH_DATABASE_URL=sqlite:///./data/auth.db
USER_DATABASE_URL=sqlite:///./data/users.db
ROOM_DATABASE_URL=sqlite:///./data/rooms.db
ROOM_RESERVATION_DATABASE_URL=sqlite:///./data/room_reservations.db
RESTAURANT_DATABASE_URL=sqlite:///./data/restaurants.db
RESTAURANT_RESERVATION_DATABASE_URL=sqlite:///./data/restaurant_reservations.db
EXPERIENCE_DATABASE_URL=sqlite:///./data/experiences.db
ANALYTICS_DATABASE_URL=sqlite:///./data/analytics.db

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-service:8001
USER_SERVICE_URL=http://user-service:8002
ROOM_SERVICE_URL=http://room-service:8003
ROOM_RESERVATION_SERVICE_URL=http://room-reservation-service:8004
RESTAURANT_SERVICE_URL=http://restaurant-service:8005
RESTAURANT_RESERVATION_SERVICE_URL=http://restaurant-reservation-service:8006
EXPERIENCE_SERVICE_URL=http://experience-service:8007
ANALYTICS_SERVICE_URL=http://analytics-service:8008

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
