# API Gateway Environment Variables
# Configurar estas variables en Coolify

# Puerto (Coolify lo configura automáticamente)
PORT=8000

# URLs de los microservicios
# Si los servicios no están desplegados, puedes dejar estos valores
# El API Gateway funcionará aunque los servicios no respondan
AUTH_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8002
ROOM_SERVICE_URL=http://localhost:8003
ROOM_RESERVATION_SERVICE_URL=http://localhost:8004
RESTAURANT_SERVICE_URL=http://localhost:8005
RESTAURANT_RESERVATION_SERVICE_URL=http://localhost:8006
EXPERIENCE_SERVICE_URL=http://localhost:8007
ANALYTICS_SERVICE_URL=http://localhost:8008
